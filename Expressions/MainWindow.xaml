<Window x:Class="Expressions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <UniformGrid Rows="3" Columns="1">
        <UniformGrid Rows="3" Columns="5" Name="VarGrid">
            <!-- VarGrid Generated by code behind -->
        </UniformGrid>
        <GroupBox Header="Expression">
            <TextBox Name="Input" TextChanged="Input_TextChanged" />
        </GroupBox>
        <GroupBox Header="Result">
            <Label Name="Output">0</Label>
        </GroupBox>
    </UniformGrid>
</Window>
